<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>
<div class="form-group">
  <table width="100%">
    <thead>
      <tr>
        <th width="30%">Description</th>
        <th width="15%">Pin User ID</th>
        <th width="15%">Show</th>
        <th width="15%">Edit</th>
        <th width="15%">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td width="30%"><%= pin.description %></td>
          <td width="15%"><%= pin.user.email if pin.user %></td>
          <td width="15%"><%= link_to 'Show', pin %></td>
          <% if pin.user == current_user %>
            <td width="15%"><%= link_to 'Edit', edit_pin_path(pin) %></td>
            <td width="15%"><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
  <% end %>
</div>
