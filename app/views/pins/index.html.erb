<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>
<div class="form-group">
  <table width="100%">
    <thead>
      <tr>
        <th width="30%">Description</th>
        <th width="20%">Show</th>
        <th width="20%">Edit</th>
        <th width="20%">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td width="30%"><%= pin.description %></td>
          <td width="20%"><%= link_to 'Show', pin %></td>
          <td width="20%"><%= link_to 'Edit', edit_pin_path(pin) %></td>
          <td width="20%"><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
</div>
